{% extends 'base.html.twig' %}

{% block header %}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class='col-sm-3'>
                <div class="form-group">
                    {{ form_label(form.dateTime, 'Date / time:') }}
                    <div class='input-group date' id='datetimepicker1'>
                        {#<input type='text' class="form-control" value="2017-01-01 12:00"/>#}
                        {{ form_widget(form.dateTime, {attr: {
                            'class': 'form-control'} }) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                moment.locale('en', {
                    week: {dow: 1} // Monday is the first day of the week
                });
                $(function () {
                    $('#datetimepicker1').datetimepicker({
                        format: "Y-MM-DD HH:mm, dddd",
                        date: new Date($(this).find('input').attr('value'))
                    });
                })
            </script>
        </div>
        <div class="row col-sm-12 form-group">
            {{ form_label(form.note, 'Note:') }}
            {{ form_widget(form.note, {attr: {
                'class': 'form-control',
                'rows': '5'} }) }}
        </div>

        <div class="row col-sm-6 form-group">
            {{ form_label(form.note, 'Category:') }}
            {{ form_widget(form.category, {attr: {
                'class': 'form-control'} }) }}
        </div>

    </div>
    <div class="form-group">
        <div class="col-sm-6">
            {% block form_buttons %}{% endblock %}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
