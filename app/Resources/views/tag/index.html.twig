{% extends 'base.html.twig' %}
{% block header %}
    Tag index
{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr onclick="window.location.href='{{ path('tag_edit', {'id': tag.id}) }}';">
                <td>{{ tag.id }}</td>
                <td>{{ tag.text }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
